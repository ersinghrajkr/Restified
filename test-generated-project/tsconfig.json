{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@tests/*": [
        "tests/*"
      ],
      "@setup/*": [
        "setup/*"
      ],
      "@config/*": [
        "config/*"
      ]
    },
    "types": [
      "node",
      "mocha",
      "chai"
    ]
  },
  "include": [
    "**/*.ts",
    "tests/**/*",
    "setup/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "reports"
  ]
}